<div class="mb-5 pt-3">        
        <h2 class="title pb-4">Dashboard: Your Posts</h2><hr>
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> info post}}
        
            <a href="/dash/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit Post</button></a>
        </div>
    {{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">Click "Create Post" to get started!</h6>
{{/if}}