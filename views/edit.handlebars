<article>
    <a href="/dash" class="is-pulled-right"> &larr; Back to Dashboard</a>
    <h2 class="title mt-5">Edit</h2>
    <hr>
    <form class="edit">
        <div>
            <label for="title">Post Title:</label>
            <input class="input" name="title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="content">Post Content:</label>
            <input class="textarea" name="content" type="text" value="{{post.post_content}}" />
        </div>
        <div class="is-pulled-right">
            created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="button is-success">Save</button>
        <button type="button" class="button is-danger delete-post-btn">Delete Post</button>
    </form>
</article>

{{> comment post.comments}}

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>
<script src="/js/comment.js"></script>